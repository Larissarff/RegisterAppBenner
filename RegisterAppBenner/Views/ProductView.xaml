<UserControl x:Class="RegisterAppBenner.Views.ProductView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:RegisterAppBenner.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="950">

    <UserControl.DataContext>
        <viewModels:ProductViewModel/>
    </UserControl.DataContext>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- FILTROS -->
        <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
            <Label Content="Filtrar por Nome:" Width="120" VerticalAlignment="Center"/>
            <TextBox Width="150" Margin="0 0 20 0" Text="{Binding NameFilter, UpdateSourceTrigger=PropertyChanged}"/>

            <Label Content="Filtrar por Código:" Width="120" VerticalAlignment="Center"/>
            <TextBox Width="100" Margin="0 0 20 0" Text="{Binding CodeFilter, UpdateSourceTrigger=PropertyChanged}"/>

            <Label Content="Valor Mínimo:" Width="100" VerticalAlignment="Center"/>
            <TextBox Width="80" Margin="0 0 10 0" Text="{Binding MinPriceFilter, UpdateSourceTrigger=PropertyChanged}"/>

            <Label Content="Valor Máximo:" Width="100" VerticalAlignment="Center"/>
            <TextBox Width="80" Text="{Binding MaxPriceFilter, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>

        <!-- CAMPOS DE CADASTRO -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0 0 0 10">
            <Label Content="Nome:" Width="60" VerticalAlignment="Center"/>
            <TextBox Width="200" Margin="0 0 20 0" Text="{Binding Name}"/>

            <Label Content="Código:" Width="70" VerticalAlignment="Center"/>
            <TextBox Width="120" Margin="0 0 20 0" Text="{Binding Code}"/>

            <Label Content="Preço:" Width="50" VerticalAlignment="Center"/>
            <TextBox Width="100" Text="{Binding Price}"/>

            <Button Content="Adicionar" Width="100" Margin="20 0 10 0"
                    Background="#4CAF50" Foreground="White" Click="AddProduct_Click"/>
            <Button Content="Atualizar" Width="100" Margin="0 0 10 0"
                    Background="#FF9800" Foreground="White" Click="UpdateProduct_Click"/>
            <Button Content="Excluir" Width="100"
                    Background="#F44336" Foreground="White" Click="DeleteProduct_Click"/>
        </StackPanel>

        <!-- GRID -->
        <DataGrid Grid.Row="2" ItemsSource="{Binding Products}"
                  SelectedItem="{Binding SelectedProduct}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="False"
                  Margin="0,10,0,0"
                  Height="350">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50" IsReadOnly="True"/>
                <DataGridTextColumn Header="Nome" Binding="{Binding Name}" Width="200"/>
                <DataGridTextColumn Header="Código" Binding="{Binding Code}" Width="150"/>
                <DataGridTextColumn Header="Preço (R$)" Binding="{Binding Price, StringFormat=N2}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
